<label>Enter Grade:</label>
<input type="text" id="grd">
<input type="button" value="GO!" onclick="displayy()">
<h4>Grade Result:</h4>
<h3 id="result"></h3>

	<script>
		function displayy()
		{
			var grd=Number(document.getElementById('grd').value);	
			
			if(isNaN('grd')==false)
			var bracket=""
		{

			if(grd>94)
			{
				document.getElementById('result').innerHTML="Excellence";
			}
			else if(grd>84)
			{
				document.getElementById('result').innerHTML="Very Good";
			}
			else if(grd>79)
			{
				document.getElementById('result').innerHTML="Good";
			}
			else if(grd>74)
			{
				document.getElementById('result').innerHTML="Average";
			}
			else if(grd<75)
			{
				document.getElementById('result').innerHTML="Poor";
			}
			else
			{
				document.getElementById('result').innerHTML="INVALID VALUE";
			}
		}
	}

	</script>

