    <body>
      <br><br><br><br><br><br>

      <center>
          <h2>PUT VALUE:</h2>

          <input type="text" id="val" name="">
          <input type="button" value="OK" onclick="display()">
          <h1 id="outcome"></h1>
      </center>


      <script type="text/javascript">
        function display()
              {
                var x = document.getElementById("val").value;
              if (x % 100 == 0)
              {
                  document.getElementById("outcome").innerHTML = "AMOUNT IS ACCEPTED";
              }
              else
              {
                  document.getElementById("outcome").innerHTML = "AMOUNT IS NOT ACCEPTED";
              } 
         }
      </script>


      </body>

